{
  "name": "golden-hammer-shared",
  "version": "0.1.0",
  "description": "",
  "author": "nfgCodex <nfg.codex@outlook.com>",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "prettier": "@nfg/util/prettier",
  "scripts": {
    "predev": "npm i && npm run clean",
    "predev-build": "npm i && npm run clean",
    "preprod": "NODE_ENV=development npm i && npm run clean",
    "clean": "rimraf ./dist",
    "docker-compose": "npm i && npx nfg-compose",
    "link:util": "npx -y link ../nfg-util && npx -y install-peerdeps -nox --no-save @nfg/util",
    "withnfgutil": "npm run link:util && npm run dev",
    "start": "node ./app",
    "dev": "NODE_ENV=development concurrently -r 'npm:dev:*'",
    "dev:mkdir": "mkdir -p dist",
    "dev:watch": "nodemon -e tsx,ts,js,jsx,json,scss --watch ./src --exec npm run build",
    "dev:autoLint": "nodemon -e js,jsx,ts,tsx,json --exec \"npm run typecheck\"",
    "build": "npm run clean && concurrently -r 'npm:build:*'",
    "build:bundle": "NODE_ENV=production PLATFORM=node ENTRYPOINT=index.ts npx nfg-build",
    "build:types": "tsc --emitDeclarationOnly --declaration",
    "build:timestamp": "echo \"Built: $(date)\"",
    "typecheck": "tsc --noEmit && echo \"No Type Errors!\""
  },
  "peerDependencies": {
    "@nfg/util": "^0.0.2-7"
  }
}
