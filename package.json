{
  "name": "golden-hammer-shared",
  "version": "0.1.0",
  "description": "",
  "author": "nfgCodex <nfg.codex@outlook.com>",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "prettier": "@nfg/util/prettier",
  "scripts": {
    "predev": "npm i && npm run clean",
    "predev-build": "npm i && npm run clean",
    "preprod": "NODE_ENV=development npm i && npm run clean",
    "clean": "rimraf ./dist",
    "withnfgutil": "npx -y link ../nfg-util && npm run dev",
    "docker-compose": "npm i && npx nfg-compose",
    "build": "npm run clean && concurrently -r 'npm:build:*'",
    "build:bundle": "NODE_ENV=production PLATFORM=node ENTRYPOINT=index.ts npx nfg-build",
    "build:types": "tsc --emitDeclarationOnly --declaration",
    "build:timestamp": "echo \"Built: $(date)\"",
    "start": "node ./app",
    "dev": "NODE_ENV=development concurrently -r 'npm:dev-concurrently*'",
    "dev-concurrently:mkdir": "mkdir -p dist",
    "dev-concurrently:watch": "nodemon -e tsx,ts,js,jsx,json,scss --watch ./src --exec npm run build",
    "dev-concurrently:autoLint": "nodemon -e js,jsx,ts,tsx,json --exec \"npm run typecheck\"",
    "typecheck": "tsc --noEmit && echo \"No Type Errors!\""
  },
  "dependencies": {
    "@chialab/esbuild-plugin-env": "^0.16.0",
    "@chialab/esbuild-plugin-html": "^0.16.4",
    "@nfg/util": "^0.0.2-7",
    "@types/node": "^18.7.9",
    "@typescript-eslint/eslint-plugin": "^5.34.0",
    "@typescript-eslint/parser": "^5.34.0",
    "concurrently": "^7.3.0",
    "esbuild": "^0.14.54",
    "esbuild-copy-static-files": "^0.1.0",
    "esbuild-plugin-sass": "^1.0.1",
    "eslint": "^8.22.0",
    "nodemon": "^2.0.19",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "vitest": "^0.20.3"
  }
}
