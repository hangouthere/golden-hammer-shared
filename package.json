{
  "name": "golden-hammer-shared",
  "version": "0.1.0",
  "description": "",
  "author": "nfgCodex <nfg.codex@outlook.com>",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "prettier": "@nfg/util/prettier",
  "scripts": {
    "docker-compose": "npm i && echo \"Running in docker-compose... You can run interactively by attaching:\n\t\tdocker exec -it `hostname` npm run dev\n\nOr, you can run an env direction:\n\t\t./.scripts/dev.sh\" && tail -f /dev/null",
    "_link:util": "npx -y link /nfg-util && npx -y install-peerdeps @nfg/util -nox --no-save && npx -y link /nfg-util",
    "_nodemon": "nodemon -e tsx,ts,js,jsx,json,scss --watch ./src",
    "clean": "rimraf ./dist",
    "predev": "npm i",
    "dev": "NODE_ENV=development concurrently -r 'npm:dev:normal*'",
    "dev:normal:watch": "npm run _nodemon -- --exec npm run build",
    "dev:normal:autoLint": "npm run _nodemon -- --exec npm run typecheck",
    "dev:linked": "npm run _link:util && npm run dev",
    "build": "npm run clean && concurrently -r 'npm:build:*'",
    "build:bundle": "NODE_ENV=production PLATFORM=node ENTRYPOINT=index.ts npx nfg-build",
    "build:types": "tsc --emitDeclarationOnly --declaration",
    "build:timestamp": "echo \"Built: $(date)\"",
    "typecheck": "tsc --noEmit && echo \"No Type Errors!\"",
    "start": "node ./app"
  },
  "dependencies": {
    "@nfg/util": "^0.0.2-7"
  }
}
