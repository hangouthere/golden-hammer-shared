{
  "name": "golden-hammer-shared",
  "version": "0.1.0",
  "description": "",
  "author": "nfgCodex <nfg.codex@outlook.com>",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "prettier": "@nfg/util/prettier",
  "scripts": {
    "predev": "npm run build",
    "clean": "rimraf ./dist",
    "predocker-compose": "mkdir -p ${NPM_CONFIG_PREFIX}/lib && npm link ../nfg-util && npm i",
    "docker-compose": "echo \"Running in docker-compose... You should run interactively by attaching:\n\t\tdocker exec -it `hostname` npm run dev\" && tail -f /dev/null",
    "build": "npm run clean && concurrently -r 'npm:build:*'",
    "build:bundle": "NODE_ENV=production PLATFORM=node ENTRYPOINT=index.ts npx nfg-build",
    "build:types": "tsc --emitDeclarationOnly --declaration",
    "build:timestamp": "echo \"Built: $(date)\"",
    "start": "node ./app",
    "dev": "NODE_ENV=development concurrently -r 'npm:dev-concurrently*'",
    "dev-concurrently:mkdir": "mkdir -p dist",
    "dev-concurrently:watch": "nodemon -e tsx,ts,js,jsx,json,scss --watch ./src --exec npm run build",
    "dev-concurrently:autoLint": "nodemon -e js,jsx,ts,tsx,json --exec \"npm run typecheck\"",
    "typecheck": "tsc --noEmit && echo \"No Type Errors!\""
  },
  "dependencies": {
    "@nfg/util": "^0.0.2-5"
  },
  "devDependencies": {
    "vitest": "^0.22.1"
  }
}
