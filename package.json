{
  "name": "golden-hammer-shared",
  "version": "0.1.0",
  "description": "",
  "author": "nfgCodex <nfg.codex@outlook.com>",
  "license": "MIT",
  "_FIXME_main": "./dist/index.ts",
  "types": "./dist/index.d.ts",
  "scripts": {
    "postinstall": "npm run build",
    "clean": "rimraf ./dist",
    "docker-compose": "npm i --force && echo \"Running in docker-compose... You should run interactively by attaching:\n\t\tdocker exec -it `hostname` npm run dev\" && tail -f /dev/null",
    "build": "concurrently -r 'npm:build:*'",
    "build:bundle": "echo 'Skipping bundle for now...'",
    "build:types": "tsc --emitDeclarationOnly --declaration",
    "start": "node ./app",
    "dev": "NODE_ENV=development concurrently -r 'npm:dev-concurrently*'",
    "dev-concurrently:mkdir": "mkdir -p dist",
    "dev-concurrently:watch": "nodemon --exec npm run build",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "concurrently": "^7.0.0",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2"
  },
  "alias": {
    "-": "./src"
  }
}
